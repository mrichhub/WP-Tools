<UserControl x:Class="MikeRichards.WindowsPhone.Tools.WP8.Controls.TextBoxes.PasswordBoxWithWatermark"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:textBoxes="clr-namespace:MikeRichards.WindowsPhone.Tools.WP8.Controls.TextBoxes"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="480">

	<Grid>
		<PasswordBox x:Name="PasswordBox" Grid.Row="0" GotFocus="PasswordBox_OnGotFocus" LostFocus="PasswordBox_OnLostFocus" Visibility="Collapsed" />
		<textBoxes:TextBoxWithWatermark x:Name="PasswordWatermarkBox" Grid.Row="0" GotFocus="PasswordWatermarkBox_OnGotFocus" LostFocus="PasswordWatermarkBox_OnLostFocus" />
	</Grid>

</UserControl>